<RelativeLayout
    android:id="@+id/attach_audio_relativelayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp"
    android:visibility="gone">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#acacac"
        android:layout_centerInParent="true"
        android:layout_below="@+id/layout_time">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/linkedin"/>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/headphone_yellow"
                    android:layout_centerInParent="true"/>


            </RelativeLayout>

            <ImageView
                android:id="@+id/button1"

                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:src="@drawable/play"
                android:layout_marginLeft="@dimen/margin_10dp"/>


            <SeekBar
                android:layout_marginLeft="@dimen/margin_10dp"
                android:id="@+id/seekBar1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:alpha="0.5"
        android:background="@drawable/badge_attach_message_time"
        android:orientation="horizontal"
        android:padding="4dp">

        <TextView
            android:id="@+id/time_attach_message_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|top"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/attach_message_delivery_status_imageview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:paddingLeft="5dp"
            android:scaleType="fitCenter" />

    </LinearLayout>

</RelativeLayout>