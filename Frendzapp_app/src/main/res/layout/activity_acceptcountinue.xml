        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#60000000">
        <TextView android:textSize="18.0dip" android:textStyle="bold" android:textColor="@color/white" android:gravity="center" android:id="@+id/txt_welcome"  android:layout_width="fill_parent" android:layout_height="48.0dip" android:text="Welcome to Frendzapp" />
