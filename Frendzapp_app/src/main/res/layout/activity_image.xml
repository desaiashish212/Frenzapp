<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#000000"
    tools:context="com.rishi.frendzapp.ui.selfiemode.Image_Activity">


    <ImageView
        android:layout_centerVertical="true"
        android:id="@+id/img_camera"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/image_effect"/>

    <ImageView
        android:id="@+id/img_anticlockwise_arrow"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/arrow_rotate_anticlockwise"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/img_setProfile"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"

        android:layout_above="@+id/img_share"

        android:src="@drawable/profle_pic"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/img_share"
        android:layout_width="40dp"
        android:src="@drawable/clockwise_arrow"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="150dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignTop="@+id/img_camera"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>



