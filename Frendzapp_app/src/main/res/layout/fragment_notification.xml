<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/about_back_imgae">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp">

            <RelativeLayout
                android:id="@+id/Relative_one"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_bg"
                >
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Conversation tones"
                        android:padding="8dp"
                        android:textColor="#000000"

                        android:textSize="16dp"
                        android:id="@+id/txt_conversation_tones"
                        />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        android:paddingLeft="10dp"
                        android:text="Play sound for incoming and outgoing \n messages"
                        />




                </LinearLayout>

                <CheckBox
                    android:id="@+id/chk_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                   android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"/>




            </RelativeLayout>


            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/call_notification"
                android:layout_marginTop="10dp"
                android:background="@drawable/layout_bg">
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/Linaer_one">

                    <TextView
                        android:paddingLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MESSAGE AND GROUP NOTIFICATION"
                        android:textSize="16dp"
                        android:textColor="#000000"/>
                    <View
                        android:layout_marginTop="5dp"
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"
                        android:background="#C4CDE0"></View>





                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Linear_two"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/Linaer_one"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:paddingLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Notification tone"
                        android:textSize="15dp"
                        android:textColor="#000000"/>
                    <TextView
                        android:id="@+id/set_Tone"
                        android:paddingLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Default ringtone(New Message)"
                        android:textSize="14dp"
                        android:textColor="#898989"/>
                    <View
                        android:layout_marginTop="5dp"
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="#C4CDE0">

                    </View>




                </LinearLayout>


                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:id="@+id/Linear_three"
                    android:layout_below="@+id/Linear_two"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">


                    <TextView
                        android:paddingLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vibrate"
                        android:textSize="15dp"
                        android:layout_centerVertical="true"
                        android:textColor="#000000"/>






                    <CheckBox
                        android:id="@+id/vibrate_chkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:layout_centerVertical="true"/>


                    </RelativeLayout>



                </LinearLayout>






            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/relative_one"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_bg"
                android:layout_marginTop="10dp"
                >
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mute"
                        android:padding="8dp"
                        android:textColor="#000000"

                        android:textSize="16dp"
                        />
                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"
                        android:background="#C4CDE0"></View>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="If you donâ€™t want  messages or calls to interrupt you, you can mute text and call notifications."
                            android:layout_marginRight="@dimen/margin_30dp"/>
                        <CheckBox
                            android:id="@+id/chk_mute"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>



                </LinearLayout>






            </RelativeLayout>

        </LinearLayout>





    </ScrollView>


   </LinearLayout>