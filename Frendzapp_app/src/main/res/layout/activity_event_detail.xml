<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/about_back_imgae"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.rishi.frendzapp.ui.event.EventDetailActivity">
    <LinearLayout
        android:id="@+id/change_avatar_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:background="#80000000">

        <com.rishi.frendzapp.ui.views.RoundedImageView
            style="@style/AvatarImageView"
            android:id="@+id/avatar_imageview"
            android:duplicateParentState="true"
            app:border_color="@color/dark_gray"

            app:oval="true"
            android:gravity="center_vertical"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/name_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ashish Desai"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/dob_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="19/05/1992"
                android:textSize="20dp"
                android:textColor="#ffffff"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/days_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 Months left"
                android:textSize="20dp"
                android:textColor="#ffffff"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/congo_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Congratulate"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="#80000000"/>
</RelativeLayout>
