<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/about_back_imagae">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp">

        <RelativeLayout
            android:id="@+id/Relative_one"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Conversation tones"
                    android:padding="8dp"
                    android:textColor="#000000"

                    android:textSize="16dp"
                    android:id="@+id/txt_conversation_tones"
                    />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"

                    android:paddingLeft="10dp"
                    android:text="Play sound for incoming and outgoing messages"
                    />




            </LinearLayout>

            <CheckBox
                android:id="@+id/chk_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:layout_alignParentRight="true"/>




        </RelativeLayout>


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/call_notification">
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/Linaer_one">

                <TextView
                    android:paddingLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MESSAGE AND GROUP NOTIFICATION"
                    android:textSize="16dp"
                    android:textColor="#000000"/>
                <View
                    android:layout_marginTop="5dp"
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="#898989"></View>

           </LinearLayout>

            <LinearLayout
                android:id="@+id/Linear_two"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/Linaer_one"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:paddingLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notification tone"
                    android:textSize="15dp"
                    android:textColor="#000000"/>
                <TextView
                    android:id="@+id/set_Tone"
                    android:paddingLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Default ringtone(New Message)"
                    android:textSize="14dp"
                    android:textColor="#898989"/>
                <View
                    android:layout_marginTop="5dp"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#898989">

                </View>




            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="5dp"
                android:id="@+id/Linear_three"
                android:layout_below="@+id/Linear_two"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:paddingLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vibrate"
                        android:textSize="15dp"
                        android:textColor="#000000"
                        android:layout_centerVertical="true"/>

                    <CheckBox
                        android:id="@+id/vibrate_chkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_below="@+id/Linear_three"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <View
                    android:layout_marginTop="5dp"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#898989">

                </View>

            </LinearLayout>






        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/callnotification">
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/Linaer_one_call">

                <TextView
                    android:paddingLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CALL NOTIFICATION"
                    android:textSize="16dp"
                    android:textColor="#000000"/>
                <View
                    android:layout_marginTop="5dp"
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="#898989"></View>





            </LinearLayout>

            <LinearLayout
                android:id="@+id/Linear_two_call"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/Linaer_one_call"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:paddingLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ringtone"
                    android:textSize="15dp"
                    android:textColor="#000000"/>
                <TextView
                    android:id="@+id/set_Ringtone"
                    android:paddingLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Default ringtone"
                    android:textSize="14dp"
                    android:textColor="#898989"/>
                <View
                    android:layout_marginTop="5dp"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#898989">

                </View>




            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="5dp"
                android:id="@+id/Linear_three_call"
                android:layout_below="@+id/Linear_two_call"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:paddingLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vibrate"
                        android:textSize="15dp"
                        android:textColor="#000000"
                        android:layout_centerVertical="true"/>

                    <CheckBox
                        android:id="@+id/chk_call_three"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"/>
                </RelativeLayout>




            </LinearLayout>

            <LinearLayout
                android:layout_below="@+id/Linear_three_call"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <View
                    android:layout_marginTop="5dp"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#898989">

                </View>

            </LinearLayout>






        </RelativeLayout>



    </LinearLayout>


</LinearLayout>