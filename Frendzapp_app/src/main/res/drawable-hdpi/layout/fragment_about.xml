<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/about_back_imagae"
    android:gravity="center" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Frendzapp Messenger"
           android:gravity="center"
            android:textColor="#000000"

            android:textSize="20sp"
            android:id="@+id/txt_messenger_name"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Version 1.0.1"
            android:layout_marginTop="5dp"
            android:textColor="#898989"
            android:textSize="17sp"

            android:id="@+id/txt_versions"
            android:gravity="center" />

        <ImageView
            android:layout_marginTop="15dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:background="@drawable/mainlogo"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Â© 2016-2017 Frendzapp Inc \nAll rights reserved."
            android:layout_marginTop="15dp"

            android:textColor="#898989"
            android:layout_gravity="center"
            android:textSize="17sp"

            android:id="@+id/txt_all_rights_reserved"
            android:gravity="center" />




    </LinearLayout>


</LinearLayout>